<h1>eat the freaking burger</h1>


<div id="left">

  <h2>burgers to be devoured</h2>

  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/block devoured=true}}
    {{/unless}}
    {{/each}}
  </ul>

</div>

<div id="right">

<h2>you've eaten these burgers</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

<div id="add">
  <h2>add a burger</h2>

  <form class="create-form">

    <div class="form-group">
      <label for="burger">burger name:</label>
      <input type="text" id="burger" name="name">
    </div>

    <button type="submit">add burger</button>
  </form>
</div>
